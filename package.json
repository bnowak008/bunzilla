{
  "name": "bunzilla",
  "version": "0.0.4",
  "description": "A CLI tool for bootstrapping Bun projects with modern development practices",
  "type": "module",
  "main": "dist/esm/index.js",
  "bin": {
    "bunzilla": "./dist/esm/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && cp -r src/templates dist/esm/ && chmod +x dist/esm/index.js && bun run postbuild",
    "prebuild": "bun run scripts/prepare-build.js",
    "postbuild": "bun scripts/fix-imports.js",
    "test": "bun test",
    "lint": "biome check .",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit",
    "validate-templates": "bun run src/scripts/validate-templates.ts"
  },
  "keywords": [
    "bun",
    "cli",
    "scaffold",
    "template",
    "project-generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@types/prompts": "^2.4.9",
    "bun-types": "latest",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "types": "./dist/types/index.d.ts",
  "publishConfig": {
    "access": "public"
  }
}
